extends  ../layout
block style
  link(rel="stylesheet" href="/index/index.css")
block content
  .container
    .row
      each  item in movies
        .col-md-2
          .thumbnail
            a(href="/movie/detail.html/#{item._id}")
              img(src="#{item.poster}", alt="#{item.title}")
            .caption
              //h3 #{item.title}
              p: a.btn.btn-primary(href="/movie/detail.html/#{item._id}", role="button") 观看预告片
  script(src='/index/bundle.js')